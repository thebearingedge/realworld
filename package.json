{
  "name": "realworld",
  "version": "1.0.0",
  "description": "An implementation of the \"RealWorld\" app for trying some patterns in Node and React.",
  "main": "index.js",
  "scripts": {
    "db:shell": "docker-compose exec postgres psql",
    "kv:shell": "docker-compose exec redis redis-cli",
    "services:start": "docker-compose up -d --build",
    "services:stop": "docker-compose down",
    "services:restart": "run-s -s services:stop services:start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/realworld.git"
  },
  "keywords": [],
  "author": "Tim Davis <contact@timdav.is>",
  "license": "ISC",
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "standard-with-typescript"
    ],
    "rules": {
      "@typescript-eslint/prefer-function-type": "off",
      "@typescript-eslint/promise-function-async": "off",
      "@typescript-eslint/method-signature-style": [
        "error",
        "method"
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/realworld/issues"
  },
  "homepage": "https://github.com/thebearingedge/realworld#readme",
  "dependencies": {
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.3.2",
    "pg-lit": "^0.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/pg": "^7.14.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "chai": "^4.2.0",
    "chai-struct": "^4.0.1",
    "cypress": "^5.0.0",
    "eslint": "^7.7.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
